<%- include('./src/header'); %>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title mb-2"><i class="dripicons-user"></i>  Engelli Kullanıcılar</h4>  
            <div class="">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">eKuaförüm</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Engelli Kullanıcılar</a></li>
                </ol>
            </div>                                      
        </div>
    </div>
</div>
<%- include('./src/sidebar'); %>
    <div class="page-content">
        <div class="container-fluid"> 
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 header-title"><%= title %></h4>
                            <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                <tr>
                                    <th>Adı Soyadı</th>
                                    <th>Telefon</th>
                                    <th>Favori Sayısı</th>
                                    <th>Yorum Sayısı</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% find_user.forEach(function(user){ %>                           
                                    <tr>
                                            <td>
                                                <img src="<%= user.userPhoto %>" class="rounded-circle thumb-sm mr-1" /> <%= user.fullName%></a>
                                            </td>
                                            <td><%= user.telephone %></td>
                                            <td><%= user.userFavorite.length %></td>
                                            <td><%= user.operatingComments.length %></td>
                                            <td><%= moment(user.userCreated).format("DD MM YYYY"); %></td>
                                            <td>
                                                <a href="../deleteUser/<%= user._id %>" class="btn btn-sm btn-warning"><i class="fas fa-trash"></i></a>
                                                <a href="../removeBannedUser/<%= user._id %>" class="btn btn-sm btn-success"><i class="fas fa-check"></i></a>
                                                <a href="../updatePhoto/<%= user._id %>" class="btn btn-sm btn-primary"><i class="fas fa-camera"></i></a>
                                            </td>
                                        </tr> 
                                  <% }); %> 
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
        </div><!-- container -->
    </div>
<%- include('./src/footer'); %>

